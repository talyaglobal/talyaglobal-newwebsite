# TalyaGlobal Environment Configuration

# Node Environment
NODE_ENV=development

# App Configuration
APP_NAME=talyaglobal-platform
NEXT_PUBLIC_APP_URL=https://talyaglobal.com
API_URL=https://api.talyaglobal.com

# Company Information
COMPANY_NAME=TalyaGlobal
COMPANY_WEBSITE=https://www.talyaglobal.com
COMPANY_EMAIL=info@talyaglobal.com
COMPANY_ADDRESS=Dubai, United Arab Emirates
COMPANY_LINKEDIN=https://www.linkedin.com/company/talyaglobal
COMPANY_YOUTUBE=https://www.youtube.com/@TalyaGlobal

# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Security
JWT_SECRET=talyaglobal_secure_jwt_secret_key_2025_production
ENCRYPTION_KEY=talyaglobal_32_char_encryption_key_2025

# External APIs
OPENAI_API_KEY=your_openai_api_key
CLAUDE_API_KEY=your_claude_api_key

# Email Configuration
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# SMS/WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Payment Processing (Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_AI_ASSESSMENT=true
NEXT_PUBLIC_ENABLE_VIP_ZONE=true